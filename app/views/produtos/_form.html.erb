<body class="site">
  <%= form_with model: @produto, local: true do |form| %>
    <% if @produto.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@produto.errors.count, "Erros") %>
        </h2>
          <div class="alert alert-danger" role="alert">
            <% @produto.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </div>
      </div>
    <% end %>

    <div class="form-group fields">
      <%= form.label :nome %><br>
      <%= form.text_field :nome, :class=> "form-control" %>
    </div>
  
    <div class="form-group fields">
      <%= form.label :descricao %><br>
      <%= form.text_area :descricao, :class => "form-control", rows: 3 %>
    </div>

    <div class="form-group fields">
      <%= form.label :preco %><br>
      <%= form.number_field :preco, step: :any, :class => "form-control", rows: 3 %>
    </div>
  
    <div class="form-group fields">
      <%= form.label :categoria %><br>
      <%= form.select(:categoria_id, @categoria_options, {}, { :class => 'custom-select' })%>
    </div>
    

		<div class="form-botoes">
			<div class="row">
				<div class="col-sm-12 col-lg-8">
					<%= form.submit :class => "btn btn-primary botao botao--margin" %>
				</div>
				<div class="col-sm-12 col-lg-4">
					<%= form.submit "Limpar", :name => 'reset', :type => "reset", :class => "btn btn-secondary botao"%>
				</div>
			</div>
		</div>
  <% end %>
</body>