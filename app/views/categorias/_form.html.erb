<body class="site">
  <%= form_with model: @categoria, local: true do |form| %>
    <% if @categoria.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@categoria.errors.count, "Erros") %>
        </h2>
          <div class="alert alert-danger" role="alert">
            <% @categoria.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </div>
      </div>
    <% end %>

    <div class="form-group fields>
      <%= form.label :nome %><br>
      <%= form.text_field :nome, :class=> "form-control" %>
    </div>
  
    <div class="form-group fields>
      <%= form.label :descricao %><br>
      <%= form.text_area :descricao, :class => "form-control", rows: 3 %>
    </div>
  
		<div class="form-botoes">
			<div class="row">
				<div class="col-sm-12 col-lg-8">
					<%= form.submit :class => "btn btn-primary botao botao--margin" %>
				</div>
				<div class="col-sm-12 col-lg-4">
					<%= form.submit "Limpar", :name => 'reset', :type => "reset", :class => "btn btn-secondary botao"%>
				</div>
			</div>
		</div>
  <% end %>
</body>